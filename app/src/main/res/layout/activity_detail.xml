<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="0dp"
  android:padding="0dp"
  tools:context="com.udacity.sandwichclub.DetailActivity">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/image_iv"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:adjustViewBounds="true"
      android:contentDescription="@string/sandwich_picture_content_description"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/origin_tv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/short_horizontal_margin"
      android:layout_marginEnd="@dimen/activity_vertical_margin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline_center"
      app:layout_constraintTop_toTopOf="@+id/textView3"
      tools:text="Germany"/>

    <TextView
      android:id="@+id/textView"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="@dimen/activity_vertical_margin"
      android:layout_marginEnd="@dimen/short_horizontal_margin"
      android:text="@string/detail_also_known_as_label"
      app:layout_constraintEnd_toStartOf="@+id/guideline_center"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/image_iv"/>

    <TextView
      android:id="@+id/textView2"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:layout_marginEnd="@dimen/short_horizontal_margin"
      android:text="@string/detail_ingredients_label"
      app:layout_constraintEnd_toStartOf="@+id/guideline_center"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <TextView
      android:id="@+id/textView3"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:layout_marginEnd="@dimen/short_horizontal_margin"
      android:text="@string/detail_place_of_origin_label"
      app:layout_constraintEnd_toStartOf="@+id/guideline_center"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/also_known_tv"/>

    <TextView
      android:id="@+id/description_tv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/short_horizontal_margin"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      android:paddingBottom="@dimen/tall_vertical_margin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline_center"
      app:layout_constraintTop_toTopOf="@+id/textView4"
      tools:text="Very delicious"/>

    <TextView
      android:id="@+id/ingredients_tv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/short_horizontal_margin"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline_center"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      tools:text="Pepper, Meat, Hot Sauce"/>

    <TextView
      android:id="@+id/also_known_tv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/short_horizontal_margin"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline_center"
      app:layout_constraintTop_toTopOf="@+id/textView"
      tools:text="Sandwich"/>

    <TextView
      android:id="@+id/textView4"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:layout_marginEnd="@dimen/short_horizontal_margin"
      android:text="@string/detail_description_label"
      app:layout_constraintEnd_toStartOf="@+id/guideline_center"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ingredients_tv"
      />

    <android.support.constraint.Guideline
      android:id="@+id/guideline_center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.4"/>

  </android.support.constraint.ConstraintLayout>
</ScrollView>
